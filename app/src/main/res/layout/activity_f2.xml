<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="555dp"
                app:layout_constraintTop_toTopOf="@id/constraintScroll"
                app:layout_constraintStart_toStartOf="@id/constraintScroll"
                app:layout_constraintEnd_toEndOf="@id/constraintScroll"
                android:src="@drawable/poster_spirited_away"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                android:text="Título Filme"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@color/background_blue"
                android:paddingHorizontal="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtTituloJapan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                android:text="Título Japones Filme"
                android:textSize="20sp"
                android:background="@color/background_blue"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtDiretor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/txtTituloJapan"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                android:text="Diretor Filme"
                android:textSize="20sp"
                android:background="@color/background_blue"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/txtDiretor"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                android:text="Data Lancamento Filme"
                android:textSize="20sp"
                android:background="@color/background_blue"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtSinopse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/txtData"
                android:text="@string/placeholder_sinopse"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/characters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/txtSinopse"
                android:text="Characters"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@color/background_blue"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"/>

            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imgPoster"
                app:layout_constraintEnd_toEndOf="@id/imgPoster"
                app:layout_constraintTop_toBottomOf="@id/characters"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/char1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:background="@color/background_blue">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/chihiro"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/char2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:background="@color/background_blue">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/chihiro"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/char3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:background="@color/background_blue">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/chihiro"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/char4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardMaxElevation="8dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:background="@color/background_blue">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/chihiro"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>